@import mixins
@import vars
@import groups

:root
  --fReg: Geometria-Regular
  --fBold: Geometria-Bold
  --fHeavy: Geometria-Heavy
font_inc(Geometria-Regular,'/Geometria-Regular.woff2')
font_inc(Geometria-Bold,'/Geometria-Bold.woff2')
font_inc(Geometria-Heavy,'/Geometria-Heavy.woff2')
button
  font-family inherit
body
  font(14px,var(--fReg),var(--black))
  bg initial center repeat-y url('/img/g-docs-bg-line.svg')
.set
  wh 100%

.row
  df({
    df: '.row',
    ali: 'center'
  })
.section
  padding 10px
  +tablet()
    w 740px
    margin auto
    padding 0
  +tablet-large()
    w 980px
  +desktop()
    w 1170px
.head
  &-row
    +tablet-large()
      padding-top 74px
  &-logo
    font 50px var(--fHeavy)
    color RGB(var(--black))
    margin auto
    text-transform uppercase
    +tablet-large()
      height 63px
      margin 0
    +desktop()
      font-size 39px
  &-menu
    display none
    w 70%
    &.active
      df({
        df: '.head-menu',
        ali: 'center'
        jus: 'center'
      })
      flex-direction column
      background-color RGBA(var(--blue))
      wh 100%
      fixed top 0 left 0
      z-index 10
      a
        display block
        margin-bottom 16px
        font-weight 700
        text-transform uppercase
        color #fff
    +tablet-large()
      display flex
      margin-left 50px
      column-gap 20px
      a
        color RGBA(var(--black),.4)
        font-family var(--fBold)
        text-transform: uppercase
    +desktop()
      w 74.5%
      margin-left auto
  &-actions
    margin-left auto
    .button
      border-radius 100px
      border 2px solid RGB(var(--blue))
      margin-right 20px
    .link
      color RGB(var(--black))
  &-burger
    df({
      df: '.head-burger',
      ali: 'center'
      jus: 'center'
    })
    box-shadow 1px 1px 2px RGBA(var(--black),.3)
    flex-direction column
    wh 40px
    border-radius @width
    fixed bottom 20px left @bottom
    background-color RGB(var(--blue))
    span,&:before,&:after
      af ''
      wh 20px 3px
      border-radius @height
      background-color #fff
    span
      margin 2px 0
    +tablet-large()
      display: none
.aside
  display none
  +tablet-large()
    display block
    margin-right 100px
  +desktop()
    w 270px
    flex 0 0 270px
    margin-right 28px
  &-block
    position relative
  &-button
    @extend .head-burger
    left 80px
  &-title
    font-family var(--fBold)
    text-transform uppercase
  &-links
    margin-top 20px
    font-family var(--fBold)
    a
      display block
      color RGBA(var(--black),.4)
      margin-top @margin-top
    +tablet-large()
      margin-bottom: 40px
  &-actions
    absolute top -10px left -50px
    &-list
      w 150px
      flex-direction: column
      absolute top 40px left -120px
      &.show
        df({
          df: '.aside-actions-list',
          ali: 'flex-end'
          jus: 'center'
        })
  &-btn
    font 14px var(--fBold)
    color RGBA(var(--black),.4)
    margin-bottom 10px
    &:hover
      color RGBA(var(--blue),1)
  &-inpt
    min-width 50px
    border-bottom 1px solid #000
.action
  &-items
    position: absolute
    top -15px
    right 0
    display flex
  &-button
    df({
      df:'.action-button',
      ali:'center',
      jus:'center'
    })
    wh 30px
    background #FCFCFC
    box-shadow 1px 1px 2px rgba(170, 170, 204, 0.5)
    border-radius @width
    transition .35s ease
    img
      w 20px
      filter grayscale(1)
    &:hover,&.pressed
      img
        filter grayscale(0)
    &.item
       img
          wh 15px
  &-list
    box-shadow 1px 1px 2px rgba(170, 170, 204, 0.5)
    background #FCFCFC
    z-index 10
    absolute top -72px left 0
    right 0
    margin auto
    column-gap 10px
    display none
    padding 10px 0
    &.bottom
      top initial
      bottom -72px
    &.active
      display flex
    df({
      df:'.action-list',
      ali:'center',
      jus:'center'
    })
    &-item
      border-radius 5px
      padding 8px 12px
      background #FCFCFC
      box-shadow 1px 1px 2px rgba(170, 170, 204, 0.5)
      img
        filter grayscale(1)
      &.pressed,&:hover
        img
          filter grayscale(0)
.main
  +desktop()
    w calc( 1170px - 270px)
    flex 0 0 @width
    margin-left auto

  &-body
    position relative
  &-row
    df({
      ali: 'flex-start'
    })
    +tablet-large()
     margin-top 70px
  &-title,&-text
    &:first-child
      margin-top 35px
      +tablet()
        margin-top @margin-top*2
  &-title
    text-transform uppercase
    font 36px var(--fBold)
    margin-top 60px
    +tablet()
      margin-top @margin-top*2
  &-text
    max-width 880px
    color RGBA(var(--black),.4)
    line-height 24px
    margin-top mt=38px
    +tablet()
      margin-top mt*2
      &+&
        margin-top mt
  &-code
    max-width 100%
    display: block
    margin-top: 24px
.input
  wh 100% 40px
  padding-left 20px
  border none
  border-bottom 2px solid RGB(var(--gray))
  display block
  font-family inherit
  +tablet()
    margin-top @height
  +tablet-large()
    margin-top 0
  &.search
    bg 10px no-repeat left center url('./img/search.svg')
  &::placeholder
    font 14px var(--fReg)
.button
  border-radius 10px
  padding 10px
  color RGB(var(--blue)) !important
  background-color #fff

.item
  border-top 2px dashed transparent
  border-bottom @border-top
  &:hover
    border-top 2px dashed RGBA(var(--black),.2)
    border-bottom @border-top
.edited
  position relative
  background-color #eee
  position relative
  //padding 20px 0
  border-top 2px dashed RGBA(var(--black),.2)
  border-bottom @border-top
  .action-button.active
    absolute left 0 right 0
    top t=-15px
    z-index 2
    margin auto
    &.bottom
      top inherit
      bottom t

.code
  padding 10px
  border-radius 8px
  background-color #212121
  color: rgba(255,255,255,.8)
  &-line
    word-wrap break-word
    white-space pre-wrap
    word-break normal
  .js
    &-define
      color #BA68C8
    &-var
      color #81D4FA
